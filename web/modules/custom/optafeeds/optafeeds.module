<?php

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function optafeeds_help($route_name, RouteMatchInterface $route_match) {
    switch ($route_name) {
        case 'help.page.optafeeds':
            return t('
        <h2>Opta feeds widgets blocks</h2>
        <h3>Instructions</h3>
        <p>Enable module to activate available blocks.</p>
      ');
    }
}
