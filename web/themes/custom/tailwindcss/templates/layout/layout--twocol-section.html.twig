{#
/**
 * @file
 * Default theme implementation to display a two-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% if content %}
    <div{{ attributes.addClass('tw-mt-10') }}>

        {% if content.first %}
            <div {{ region_attributes.first.addClass('tw-w-1/2 block-left block-title-no-caps','layout__region', 'layout__region--first') }}>
                {{ content.first }}
            </div>
        {% endif %}

        {% if content.second %}
            <div {{ region_attributes.second.addClass('block-title-no-caps tw-mt-10 md:tw-mt-10','layout__region', 'layout__region--second') }}>
                {{ content.second }}
            </div>
        {% endif %}

    </div>
{% endif %}
