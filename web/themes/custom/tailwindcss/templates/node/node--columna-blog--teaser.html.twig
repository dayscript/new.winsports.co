<div class="opinion teaser" {{ attributes.addClass(classes) }}>
    <div class="image">
        {% if node.hasField('field_image') %}
            {{ content.field_image }}
        {% endif %}
    </div>
    <div class="title tw-text-3xl py-4">
        <a href="{{ url }}">{{ label }}</a>
    </div>
    <div class="pb-4" {{ author_attributes }}>
        {{ author_picture }}
    </div>
</div>