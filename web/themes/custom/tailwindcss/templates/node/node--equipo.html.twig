<div{{ attributes.addClass('node') }}>
    {{ title_prefix }}
    {% if not page %}
        <h2{{ title_attributes }}>
            <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h2>
    {% endif %}
    {{ title_suffix }}
    <div{{ content_attributes.addClass('node-content') }}>
        {% if node.hasField('field_nombre_comun') %}
            <h2 class="title tw-mt-10 tw-mb-6">{{ content.field_nombre_comun }}</h2>
        {% endif %}
        <div class="md:tw-grid md:tw-grid-cols-12 tw-bg-gray-650 p-8 md:p-10">
            <div class="tw-grid grid-cols-12 col-span-5 tw-items-center tw-text-white">
                <div class="col-span-4 md:col-span-3">{{ content.field_image }}</div>
                <div class="col-span-8 md:col-span-8 tw-text-sm md:border-r-2 md:border-gray-400">
                    <div><strong>{{ node.field_ciudad.fieldDefinition.label }}</strong>: {{ node.field_ciudad.value }}</div>
                    <div><strong>{{ node.field_fundacion.fieldDefinition.label }}</strong>: {{ node.field_fundacion.value }}</div>
                    <div><strong>{{ node.field_estadio.fieldDefinition.label }}</strong>: {{ node.field_estadio.value }}</div>
                    <div><strong>{{ node.field_presidente.fieldDefinition.label }}</strong>: {{ node.field_presidente.value }}</div>
                    <div><strong>{{ node.field_director_tecnico.fieldDefinition.label }}</strong>: {{ node.field_director_tecnico.value }}</div>
                    <div><strong>{{ node.field_mediastream.fieldDefinition.label }}</strong>: {{ node.field_mediastream.value }}</div>
                    <div><strong>{{ node.field_pretitle.value }}</strong></div>
                </div>
            </div>
            <div class="col-span-7">
                <div class="body tw-text-white tw-text-sm">{{ content.body }}</div>
            </div>
        </div>
    </div>
</div>