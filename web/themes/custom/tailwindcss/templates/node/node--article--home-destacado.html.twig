<div class="article home-destacado flex">
    <div class="image">
        {% if node.hasField('field_image') %}
            {{ content.field_image }}
        {% endif %}
    </div>
    <div>
        <div class="torneo category">{{ content.field_torneo }}</div>
        <div class="title max-w-xl"><a href="{{ url }}">{{ label }}</a></div>
        <div class="lead">{{ content.field_lead }}</div>
    </div>
    
</div>